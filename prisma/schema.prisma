generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model UserSession {
  id                    String       @id @default(cuid())
  userTelegramId        String       @unique
  lang                  String
  state                 String
  tempCreditsThb        Int?
  activeOrderId         String?
  pendingVoucherOrderId String?
  createdAt             DateTime     @default(now())
  updatedAt             DateTime     @updatedAt
}

model Order {
  id                   String        @id @default(uuid())
  userTelegramId       String
  lang                 String
  creditsThb           Int
  commissionRate       Decimal
  fxUsdtPerThb         Decimal
  usdtAmount           Decimal
  status               String
  nowPaymentsPaymentId String?
  payAddress           String?
  payAmount            Decimal?
  expiresAt            DateTime
  createdAt            DateTime      @default(now())
  updatedAt            DateTime      @updatedAt
  events               PaymentEvent[]

  @@index([userTelegramId])
  @@index([status])
}

model PaymentEvent {
  id         String              @id @default(cuid())
  orderId    String
  source     String
  rawJson    String
  receivedAt DateTime            @default(now())
  order      Order               @relation(fields: [orderId], references: [id])

  @@index([orderId])
}
