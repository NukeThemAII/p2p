generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum OrderStatus {
  DRAFT
  INVOICE_CREATED
  WAITING_PAYMENT
  CONFIRMING
  CONFIRMED
  FINISHED
  EXPIRED
  FAILED
  REFUNDED
  FULFILLED
}

enum PaymentEventSource {
  NOWPAYMENTS_IPN
  POLL
}

enum SessionState {
  LANG_SELECTED
  MAIN_MENU
  BUY_ENTER_AMOUNT
  BUY_CONFIRM_SUMMARY
  INVOICE_VIEW
  ORDER_LIST
  HELP
  ADMIN_WAIT_VOUCHER
}

model UserSession {
  id                    String       @id @default(cuid())
  userTelegramId        String       @unique
  lang                  String
  state                 SessionState
  tempCreditsThb        Int?
  activeOrderId         String?
  pendingVoucherOrderId String?
  createdAt             DateTime     @default(now())
  updatedAt             DateTime     @updatedAt
}

model Order {
  id                   String        @id @default(uuid())
  userTelegramId       String
  lang                 String
  creditsThb           Int
  commissionRate       Decimal
  fxUsdtPerThb         Decimal
  usdtAmount           Decimal
  status               OrderStatus
  nowPaymentsPaymentId String?
  payAddress           String?
  payAmount            Decimal?
  expiresAt            DateTime
  createdAt            DateTime      @default(now())
  updatedAt            DateTime      @updatedAt
  events               PaymentEvent[]

  @@index([userTelegramId])
  @@index([status])
}

model PaymentEvent {
  id         String              @id @default(cuid())
  orderId    String
  source     PaymentEventSource
  rawJson    Json
  receivedAt DateTime            @default(now())
  order      Order               @relation(fields: [orderId], references: [id])

  @@index([orderId])
}
