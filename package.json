{
  "name": "p2p",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently -k -n bot,api -c green,blue \"npm:dev --workspace apps/bot\" \"npm:dev --workspace apps/api\"",
    "build": "tsc -b",
    "clean": "rm -rf apps/*/dist packages/*/dist",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "db:push": "prisma db push"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/express": "^4.17.21",
    "@types/qrcode": "^1.5.5",
    "concurrently": "^8.2.2",
    "prisma": "^5.10.2",
    "tsx": "^4.7.1",
    "typescript": "^5.4.5"
  }
}
